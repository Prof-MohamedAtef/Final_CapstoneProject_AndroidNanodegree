<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryDarkColor"
    android:autoMirrored="true"
    android:id="@+id/coordinator_layout">
    <android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/AppBarLayout_height"
    android:gravity="center_vertical|center_horizontal"
        android:background="@color/primaryDarkColor"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:elevation="@dimen/appbar_elevation">
    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collabsing_toolbar"
        android:focusable="true"
        android:nextFocusDown="@id/master_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Overlap_top"
        app:expandedTitleMarginEnd="@dimen/CollapsingToolbarMArginright"
        app:expandedTitleMarginStart="@dimen/CollapsingToolbarMArginleft"
        app:layout_scrollFlags="scroll|enterAlways">
        <ImageView
            android:id="@+id/ImageContainer"
            android:nextFocusDown="@id/toolbar"
            android:focusable="true"
            android:contentDescription="@string/Article_cover"
            app:layout_collapseMode="parallax"
            android:layout_width="match_parent"
            android:scaleType = "centerCrop"
            android:layout_height="@dimen/AppBarLayout_height"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/breaking_news" />
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:focusable="true"
            android:nextFocusUp="@id/ImageContainer"
            android:layout_marginStart="@dimen/list_toolbar_side_margin"
            android:layout_marginEnd="@dimen/list_toolbar_side_margin"
            android:layout_marginLeft="@dimen/list_toolbar_side_margin"
            android:layout_marginRight="@dimen/list_toolbar_side_margin"
            android:layout_height="?actionBarSize"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.CollapsingToolbarLayout>
</android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_overlapTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <FrameLayout
            android:focusable="true"
            android:nextFocusUp="@id/collabsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/master_list_fragment"/>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>