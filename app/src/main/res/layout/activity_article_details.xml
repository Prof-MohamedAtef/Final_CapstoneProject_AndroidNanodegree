<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/primaryDarkColor"
    android:autoMirrored="true"
    android:id="@+id/coordinator_layout_detail">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/AppBarLayout_height"
    android:gravity="center_vertical|center_horizontal"
    android:background="@color/primaryDarkColor"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:elevation="@dimen/appbar_elevation">
    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collabsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Overlap_top"
        app:expandedTitleMarginEnd="64dp"
        app:expandedTitleMarginStart="48dp"
        app:layout_scrollFlags="scroll|enterAlways">
        <ImageView
            android:id="@+id/Article_MainImage"
            android:contentDescription="@string/Article_cover"
            app:layout_collapseMode="parallax"
            android:layout_width="match_parent"
            android:scaleType = "centerCrop"
            android:layout_height="@dimen/AppBarLayout_height"
            android:layout_gravity="center_vertical|center_horizontal" />
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_marginLeft="@dimen/list_toolbar_side_margin"
            android:layout_marginRight="@dimen/list_toolbar_side_margin"
            android:layout_height="?actionBarSize"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.CollapsingToolbarLayout>
</android.support.design.widget.AppBarLayout>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_overlapTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ArticleDetails"
        android:screenOrientation="landscape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:context="com.newsfeed.prof_mohamedatef.capstoneproject_newsfeed.Activities.ArticleDetailsActivity">
        <FrameLayout
            android:id="@+id/Article_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scaleType="centerInside"/>
        <FrameLayout
            android:id="@+id/Audio_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>